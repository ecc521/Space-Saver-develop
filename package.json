{
    "name": "space-saver",
    "version": "1.8.2",
    "description": "Saves disk space through file compression and duplicate file removal",
    "homepage": "https://github.com/ecc521/Space-Saver",
    "repository": "https://github.com/ecc521/Space-Saver",
    "main": "src/index.js",
    "author": {
        "name": "Tucker Willenborg",
        "email": "admin@rivers.run"
    },
    "scripts": {
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "start": "electron ."
    },
    "dmg": {
        "format": "UDBZ"
    },
    "build": {
        "copyright": "Copyright Â© 2019 Tucker Willenborg",
        "productName": "Space Saver",
        "appId": "com.electron.space-saver",
        "compression": "maximum",
        "directories": {
            "output": "../Space-Saver"
        },
        "publish": {
            "provider": "github",
            "releaseType": "prerelease",
            "owner": "ecc521",
            "repo": "Space-Saver"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "extraResources": [
                "bin/*darwin*"
            ],
            "category": "public.app-category.utilities",
            "darkModeSupport": true,
            "type": "distribution",
            "icon": "assets/icon.icns"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "extraResources": [
                "bin/*.exe"
            ],
            "icon": "assets/icon.ico"
        },
        "linux": {
            "target": [
                "deb"
            ],
            "extraResources": [
                "bin/*linux*"
            ],
            "synopsis": "Space Saver can save you lots of space by utilizing lossless file re-compression. No data is lost, and no formats are changed without your permission.",
            "description": "Put the normal description here, just remove the information about transparent compression.",
            "category": "Utility"
        }
    },
    "devDependencies": {
        "electron": "^4.1.3",
        "electron-builder": "^20.39.0"
    },
    "dependencies": {}
}
